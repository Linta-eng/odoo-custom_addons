<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="customer_list_view" model="ir.ui.view">

		<field name="name">customer.list.view</field>
		<field name="model">customer.profile</field>
		<field name="arch" type="xml">
			<tree>
				<header>
					<button name="donee" string="Select as done" class="btn-primary" type="object" />
				</header>
				<field name="firstname"/>
				<field name="lastname"/>
				<field name="fullname"/>
				<field name="gender"/>
				<field name="state" optional="hide"/>
				<field name="street" optional="hide"/>                            
				<field name="city" optional="hide"/>
				<field name="date_of_birth" optional="hide"/>                        
				<field name="ages"/>
				<field name="country_id" optional="hide" />
				<field name="location" optional="hide"/>
				<field name="phone" optional="hide"/>
				<field name="states" optional="show"/>
				<field name="document" optional="hide"/>
				<field name="filename" optional="hide" />
			</tree>
		</field>

	</record>


	<record id="customer_kanban_view" model="ir.ui.view">

		<field name="name">customer.kanban.view</field>
		<field name="model">customer.profile</field>
		<field name="arch" type="xml">
			<kanban  default_group_by="location">
				<field name ="id"/>
				<field name="fullname"/>
				<field name="gender"/>
				<field name="image"/>
				<templates>

					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_card oe_kanban_global_click" colspan="4">




							<div class="o_kanban_image " t-attf-style="background-image:url('#{kanban_image('customer.profile', 'image', record,  placeholder)}')">
								<img class="o_kanban_image_inner_pic"  t-att-alt="record.id.raw_value" t-att-src="kanban_image('customer.profile', 'image', record.id.raw_value)"/>
							</div>







							<div class="oe_kanban_details" colspan="2">


								<ul>
									<li>Name: <field name="fullname"/></li>
									<li>Gender: <field name="gender"/></li>
									<li>Location: <field name="location"/></li>
								</ul>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>

	</record>


	<record id="customer_graph_view" model="ir.ui.view">

		<field name="name">customer.graph.view</field>
		<field name="model">customer.profile</field>
		<field name="arch" type="xml">
			<graph string="mark graph">
				<field name="fullname"/>
				<field name="ages" type="measure"/>
			</graph>
		</field>

	</record>


	<record id="customer_search_view" model="ir.ui.view">

		<field name="name">customer.search.view</field>
		<field name="model">customer.profile</field>
		<field name="arch" type="xml">

			<search string="searches">
				<field name = "fullname" filter_domain="['|',('fullname','ilike',self),('location','ilike',self)]"/>
				<field name="fullname"/>
				<field name="location"/>

				<filter string="Male" name="male" domain="[('gender','=','male')]"/>
				<filter string="Female" name="female" domain="[('gender','=','female')]"/>
				<group expand="0" string="Group by">
					<filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
					<filter string="location" name="location" context="{'group_by':'location'}"/>
				</group>

			</search>	

		</field>

	</record>


	<record id="customer_form_view" model="ir.ui.view">

		<field name="name">customer.form.view</field>
		<field name="model">customer.profile</field>
		<field name="arch" type="xml">

			<form>

			<sheet>



				<field name="image" widget="image" nolabel="1" class="oe_avatar" />

				<div class="oe_title">
					<h1>
					<field name="reference" readonly="1"/>
					</h1>
				</div>
				<group string="CUSTOMER PROFILE" >
				<group >

					<field name="firstname"/>
					<field name="lastname"/>
					<field name="fullname"/>        
					<field name="phone" widget="phone"/>

					<field name="date_of_birth"/>           
					<field name="ages"/>
					<field name="gender" required="1"/>

				</group>


				<group>


					<field name="location" style="width:40%;"/>
					<field name="document" filename="filename"/>
					<field name="filename" invisible="1"/>

				</group>
				</group>

				<notebook >

					<page string="ADDRESS">

						<form> 
							<group string="ADDRESS">
							<span class="o_form_label o_td_label" name="address_name">
							<b>Address</b>
							</span>
							<div class="o_address_format">
								<field name="street" placeholder="Street..." class="o_address_street" style="width:40%;"/>
								<field name="city" placeholder="City" class="o_address_street" style="width:40%;"/>
								<field name="state" placeholder="State" class="o_address_city" style="width:40%;" />
								<field name="country_id" placeholder="Country" class="o_address_country" style="width:40%;"/>

							</div>
							</group>

						</form>

					</page>



				</notebook>

			</sheet>
			</form>
		</field>
	</record>

	<record id="action_customer" model="ir.actions.act_window">

		<field name="name">CUSTOMERS PROFILE</field>
		<field name="res_model">customer.profile</field>
		<field name="view_mode">tree,form,kanban,graph</field>
		<field name="context">{'default_location':'Trivandrum'}</field>

	</record>

	<menuitem id="helpdesk_management_root_menu" name="HELP-DESK"/>

	<menuitem id="helpdesk_management_sub_menu1" name="HELPCORNER" parent="helpdesk_management_root_menu"/>
	<menuitem id="customer_profile_menu" name="Enquiry" parent="helpdesk_management_sub_menu1"/>

	<menuitem id="helpdesk_management_sub_menu2" name="CUSTOMER" action="action_customer" parent="helpdesk_management_root_menu"/>

	<menuitem id="helpdesk_profile_menu" name="Our Customers" parent="helpdesk_management_sub_menu2"/>

</odoo>