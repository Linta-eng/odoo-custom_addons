<odoo>
	<data>
		<record id="email_template_stmt" model="mail.template">
			<field name="name">Customer Statement</field>
			<field name="model_id" ref="base.model_res_partner"/>
			<field name="auto_delete" eval="True"/>
			<field name="email_to">${object.email}</field>		
			<field name="report_template" ref="customer_statement_pdf"/>
			<field name="subject">Customer Statement - ${object.name}</field>
			<field name="lang">${object.company_id.lang}</field>
			<field name="body_html" type="html">
				<field name="body_html">
				<h1>Please find the mail</h1>
				</field>
			</field>
			<field name="report_name">${(object.name}</field>
			<field name="lang">${object.lang}</field>
		</record>
	</data>
</odoo>



