<odoo>
<record id="paperformat_customer_statement" model="report.paperformat">
    <field name="name">Customer Statement</field>
    <field name="default" eval="False"/>
    <field name="format">Letter</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">50</field>
    <field name="margin_bottom">20</field>
    <field name="margin_left">10</field>
    <field name="margin_right">10</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">30</field>
    <field name="dpi">90</field>
</record>

<record id="report_customer_statement_pdf" model="ir.actions.report">
   <field name="name">Customer Statement</field>
   <field name="model">res.partner</field>
   <field name="report_type">qweb-pdf</field>
   <field name="report_name">customer_statement.customer_statement_pdf</field>
   <field name="report_file">customer_statement.customer_statement_pdf</field>
   <field name="print_report_name">'Customer Statement - %s' % (object.name)</field>
</record>

<template id="customer_statement_pdf">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-set="lang" t-value="doc.user_id.lang if doc.type in ('open_invoices', 'paid_invoices') else doc.partner_id.lang"/>
                <div>
                    <strong t-field="company_id.partner_id.name"/>
                </div>
                <span t-field="company_id.partner_id"/>
                <div style="color:grey;font-style: italic;" t-field="company_id.report_header" name="moto">
                </div>
                <div class="text-right">
                <span style="font-weight: bold;font-size: xx-large;letter-spacing: 1px;">Statement</span>
                <br/>
                <span>Date:</span>
                <span t-esc="report_date" style="padding-left:10px;"/>
                <br/>
                </div>

</t>
</t>
</template>
</odoo>